<section>
    <h2>Profile:</h2>
    <p>Name: {{user.first_name}} {{user.last_name}}, Username: {{user.username}}</p>
    <a href="mailto: user.email">Contact via email</a>
</section>
<section>
    {{#if tasks}}
    {{#each tasks as |task|}}
    {{> task-card}}
    {{/each}}
    {{else}}
    <h3>No posts yet...</h3>
    {{/if}}
</section>